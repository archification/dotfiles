#network
ping google.com
wifi-menu -o [device_name]

#partitions
ls /sys/firmware/efi/efivars
lsblk
cfdisk
#gpt for uefi
mkfs.fat -F32 /dev/sda1 #boot efi partition
mkswap /dev/sda2 #swap partition
swapon /dev/sda2 #swap partition
mkfs.ext4 /dev/sda3 #main partitions

#mounts
mount /dev/sda3 /mnt
mkdir /mnt/boot
mount /dev/sda1 /mnt/boot
df

#mirrorlist
vi /etc/pacman.d/mirrorlist

#install system
pacstrap /mnt base base-devel

#fstab
genfstab -U /mnt >> /mnt/etc/fstab
vi /mnt/etc/fstab

#chroot
arch-chroot /mnt
ln -sf /usr/share/zoneinfo/America/Chicago /etc/localtime
hwclock --systohc --utc
vi /etc/locale.gen #uncomment en_US.UTF-8 UTF-8
locale-gen
echo "LANG=en_US.UTF-8" > /etc/locale.conf
vi /etc/hostname
passwd
useradd -g users -G wheel,storage,power -m username
passwd username
visudo #uncomment wheel group
ip addr show
systemctl enable dhcpcd@[interface]
bootctl --path=/mnt/boot install
vi /mnt/boot/loader/loader.conf
	console-mode max
	editor no
vi /mnt/boot/loader/entries/arch.conf
	title	Arch Linux
	linux	/vmlinuz-linux
	initrd	/intel-ucode.img
	initrd	/initramfs-linux.img
	options root=PARTUUID=[uuid] rw
install yay
yay -S stuff
